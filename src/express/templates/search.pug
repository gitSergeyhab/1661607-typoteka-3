extends ./layouts/wrapper



block headerContent
  header.header
    a.header__logo.logo(href='/')
      img.logo__image(src='img/icons/logo-image-only.svg' alt='логотип Тайпотеки')
      span.logo__name Типотека
    //- button.button.button--colored.header__button-new Новая запись
    a.button.button--colored.header__button-new(href= "/articles/add") Новая запись

    include ./blocks/drop-menu

    a.header__search.button.button--search(aria-label='поиск по сайту')


block mainContent
  main
    section.search-page
      if articles
        if articles.length
          include ./blocks/search-list
        else
          include ./blocks/search-before
      else
        include ./blocks/search-nothing
